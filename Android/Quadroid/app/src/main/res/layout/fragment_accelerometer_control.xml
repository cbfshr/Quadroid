<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 xmlns:tools="http://schemas.android.com/tools"
			 android:layout_width="match_parent"
			 android:layout_height="match_parent"
			 tools:context="com.calfisher.quadroid.AccelerometerControlFragment">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_margin="20dp">
		<TextView
			android:id="@+id/left_joystick_value"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="18dp"/>
		<TextView
			android:id="@+id/AxValue"
			android:text=""
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="18dp"/>
		<TextView
			android:id="@+id/AyValue"
			android:text=""
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/AxValue"
			android:textSize="18dp"/>
	</LinearLayout>

	<ImageView
		android:id="@+id/x_accelerometer_indicator"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/blue_circle_100x100"
		android:layout_gravity="center_vertical"/>
	<ImageView
		android:id="@+id/y_accelerometer_indicator"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/blue_circle_100x100"
		android:layout_gravity="center_horizontal"/>


	<ImageView
		android:id="@+id/left_joystick"
		android:src="@drawable/circle2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:scaleType="fitXY"
		android:layout_marginBottom="0dp"
		android:gravity="bottom|center_horizontal"
		android:paddingBottom="0dp"/>
	<ImageView
		android:id="@+id/left_joystick_indicator"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/red_circle_100x100"/>

</RelativeLayout>
