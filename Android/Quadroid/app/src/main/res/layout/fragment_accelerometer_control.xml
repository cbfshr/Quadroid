<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 xmlns:tools="http://schemas.android.com/tools"
			 android:layout_width="match_parent"
			 android:layout_height="match_parent"
			 tools:context="com.calfisher.quadroid.AccelerometerControlFragment">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		<TextView
			android:id="@+id/AxValue"
			android:text=""
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<TextView
			android:id="@+id/AyValue"
			android:text=""
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/AxValue"/>

		<!--<TextView
			android:id="@+id/AzValue"
			android:text=""
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/AyValue"/>-->
	</LinearLayout>



	<ImageView
		android:id="@+id/x_accelerometer_indicator"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/blue_circle_100x100"
		android:layout_gravity="center_vertical"/>
	<ImageView
		android:id="@+id/y_accelerometer_indicator"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/blue_circle_100x100"
		android:layout_gravity="center_horizontal"/>

</RelativeLayout>
